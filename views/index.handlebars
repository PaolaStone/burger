
<div class = "container">
  <br>
  <div class="jumbotron text-center">
    <h1>Devouring Burgers!</h1>
    <h5>Devour existing burgers or add your own</h5>
  </div>

  <div class = "container text-center">
    <h2>Add your favorite burger</h2>
    <br>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">
          <h5>Burger Name:</h5>
        </label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit" class="btn btn-dark">Add</button>
    </form>
  </div>
  <br>
  <div class = "container">
    <div class="row">
      <div class="col">
        <div class="card border border-secondary ">
            <div class="card-header md-secondary text-center">
              <h4>Burgers to devour</h4>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  {{#each burgers}}
                    {{#unless devoured}}
                      {{> burger-block devoured = true}}
                    {{/unless}}
                  {{/each}}
                </li>
              </ul>
            </div>
        </div>
      </div>
    <div class="col">
        <div class="card border border-secondary">
            <div class="card-header md-secondary text-center">
              <h4>Burgers devoured</h4>
            </div>
            <div class="card-body">
              {{#each burgers}}
                {{#if devoured}}
                  {{> burger-block devoured = false}}
                {{/if}}
              {{/each}}
            </div>
        </div>  
      </div>
    </div>
  <br>
</div>
  

  
  

 

  

